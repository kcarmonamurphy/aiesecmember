%form{:action => "#{action}", :method => "post"}
	#container
		%h1 AIESEC McMaster Member Application
		%h3 Availability
		#leftcol
			.field
				%label{:for => "phone_num"} Phone Number:
				%input{:type => "text", :name => "phone_num", :value => "#{c.phone_num}", :tabindex => 5}
		#rightcol
			.field
				%label{:for => "perm_address"} Permanent Address:
				%input{:type => "text", :name => "perm_address", :value => "#{c.perm_address}", :tabindex => 6}
		#clearboth
	= haml :footer, :layout => false, :locals => {:pagenum => "#{pagenum}"}